// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User Management
model User {
  id           String   @id @default(cuid())
  nama         String
  username     String   @unique
  email        String?  @unique
  password     String
  role         UserRole
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  transaksiKasir TransaksiKasir[]
  jurnalEntries  JurnalEntry[]
  laporanKeuangan LaporanKeuangan[]
  pengeluaran    Pengeluaran[]
  @@map("users")
}

enum UserRole {
  KASIR
  ADMIN
  GUDANG
  MANAJER
}

// Location/Warehouse Management
model Lokasi {
  id           String   @id @default(cuid())
  namaLokasi   String
  alamat       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  barang          Barang[]
  transaksiMasuk  TransaksiMasuk[]
  transaksiKeluar TransaksiKeluar[]
  @@map("lokasi")
}

// Product/Item Management
model Barang {
  id           String   @id @default(cuid())
  nama         String
  sku          String?  @unique
  kategori     String
  stok         Int      @default(0)
  stokMinimum  Int      @default(10)
  hargaBeli    Float
  hargaJual    Float
  satuan       String   @default("pcs")
  deskripsi    String?
  lokasiId     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  lokasi          Lokasi            @relation(fields: [lokasiId], references: [id], onDelete: Cascade)
  itemTransaksi   ItemTransaksi[]
  transaksiMasuk  TransaksiMasuk[]
  transaksiKeluar TransaksiKeluar[]
  
  @@index([kategori])
  @@index([lokasiId])
  @@map("barang")
}

// Cashier Transactions
model TransaksiKasir {
  id              String   @id @default(cuid())
  nomorTransaksi  String   @unique
  tanggal         DateTime @default(now())
  subtotal        Float
  pajak           Float    @default(0)
  diskon          Float    @default(0)
  total           Float
  metodePembayaran String  @default("tunai")
  jumlahBayar     Float
  kembalian       Float
  kasirId         String
  catatan         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  kasir         User            @relation(fields: [kasirId], references: [id])
  itemTransaksi ItemTransaksi[]
  
  @@index([tanggal])
  @@index([kasirId])
  @@map("transaksi_kasir")
}

// Transaction Items (Cart Items)
model ItemTransaksi {
  id                String   @id @default(cuid())
  transaksiKasirId  String
  barangId          String
  namaBarang        String
  hargaSatuan       Float
  qty               Int
  subtotal          Float
  createdAt         DateTime @default(now())
  
  transaksiKasir TransaksiKasir @relation(fields: [transaksiKasirId], references: [id], onDelete: Cascade)
  barang         Barang         @relation(fields: [barangId], references: [id])
  
  @@index([transaksiKasirId])
  @@index([barangId])
  @@map("item_transaksi")
}

// Incoming Goods Transaction
model TransaksiMasuk {
  id              String   @id @default(cuid())
  nomorTransaksi  String   @unique
  tanggal         DateTime @default(now())
  barangId        String
  qty             Int
  hargaBeli       Float
  totalNilai      Float
  sumber          String
  lokasiId        String
  keterangan      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  barang Barang @relation(fields: [barangId], references: [id])
  lokasi Lokasi @relation(fields: [lokasiId], references: [id])
  
  @@index([tanggal])
  @@index([barangId])
  @@index([lokasiId])
  @@map("transaksi_masuk")
}

// Outgoing Goods Transaction
model TransaksiKeluar {
  id              String   @id @default(cuid())
  nomorTransaksi  String   @unique
  tanggal         DateTime @default(now())
  barangId        String
  qty             Int
  hargaBarang     Float
  totalNilai      Float
  tujuan          String
  lokasiId        String
  keterangan      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  barang Barang @relation(fields: [barangId], references: [id])
  lokasi Lokasi @relation(fields: [lokasiId], references: [id])
  
  @@index([tanggal])
  @@index([barangId])
  @@index([lokasiId])
  @@map("transaksi_keluar")
}

// Activity Log for Audit Trail
model ActivityLog {
  id          String   @id @default(cuid())
  userId      String
  userName    String
  action      String
  entity      String
  entityId    String?
  description String
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
  @@map("activity_log")
}

// Accounting System Extensions

// Chart of Accounts
model Akun {
  id          String     @id @default(cuid())
  kode        String     @unique
  nama        String
  tipe        TipeAkun
  kategori    KategoriAkun
  parentId    String?
  level       Int        @default(1)
  isActive    Boolean    @default(true)
  deskripsi   String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  parent      Akun?      @relation("AkunHierarchy", fields: [parentId], references: [id])
  children    Akun[]     @relation("AkunHierarchy")
  jurnalDetails JurnalDetail[]
  saldoAwal   SaldoAwal[]

  @@index([tipe])
  @@index([kategori])
  @@index([parentId])
  @@map("akun")
}

enum TipeAkun {
  ASSET       // Aset
  LIABILITY   // Kewajiban
  EQUITY      // Ekuitas
  REVENUE     // Pendapatan
  EXPENSE     // Beban
}

enum KategoriAkun {
  CURRENT_ASSET      // Aset Lancar
  FIXED_ASSET        // Aset Tetap
  CURRENT_LIABILITY  // Kewajiban Lancar
  LONG_TERM_LIABILITY // Kewajiban Jangka Panjang
  OWNER_EQUITY       // Ekuitas Pemilik
  RETAINED_EARNINGS  // Laba Ditahan
  OPERATING_REVENUE  // Pendapatan Operasional
  OTHER_REVENUE      // Pendapatan Lain
  OPERATING_EXPENSE  // Beban Operasional
  OTHER_EXPENSE      // Beban Lain
}

// Journal Entries (Buku Besar)
model JurnalEntry {
  id            String      @id @default(cuid())
  nomorJurnal   String      @unique
  tanggal       DateTime    @default(now())
  deskripsi     String
  referensi     String?     // Invoice number, receipt, etc.
  tipeReferensi String?     // SALE, PURCHASE, ADJUSTMENT, etc.
  periodeId     String
  userId        String
  isPosted      Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  periode       PeriodeAkuntansi @relation(fields: [periodeId], references: [id])
  user          User             @relation(fields: [userId], references: [id])
  details       JurnalDetail[]

  @@index([tanggal])
  @@index([periodeId])
  @@index([userId])
  @@index([isPosted])
  @@map("jurnal_entry")
}

// Journal Entry Details (Debit/Credit)
model JurnalDetail {
  id            String   @id @default(cuid())
  jurnalId      String
  akunId        String
  debit         Float    @default(0)
  kredit        Float    @default(0)
  deskripsi     String?
  createdAt     DateTime @default(now())

  jurnal        JurnalEntry @relation(fields: [jurnalId], references: [id], onDelete: Cascade)
  akun          Akun        @relation(fields: [akunId], references: [id])

  @@index([jurnalId])
  @@index([akunId])
  @@map("jurnal_detail")
}

// Accounting Periods
model PeriodeAkuntansi {
  id          String     @id @default(cuid())
  nama        String
  tanggalMulai DateTime
  tanggalAkhir DateTime
  isActive    Boolean    @default(false)
  isClosed    Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  jurnalEntries JurnalEntry[]
  saldoAwal     SaldoAwal[]
  laporanKeuangan LaporanKeuangan[]

  @@index([tanggalMulai, tanggalAkhir])
  @@index([isActive])
  @@map("periode_akuntansi")
}

// Opening Balances
model SaldoAwal {
  id        String   @id @default(cuid())
  akunId    String
  periodeId String
  saldo     Float    @default(0)
  createdAt DateTime @default(now())

  akun      Akun            @relation(fields: [akunId], references: [id])
  periode   PeriodeAkuntansi @relation(fields: [periodeId], references: [id])

  @@unique([akunId, periodeId])
  @@map("saldo_awal")
}

// Financial Statements
model LaporanKeuangan {
  id          String            @id @default(cuid())
  tipe        TipeLaporan
  periodeId   String
  tanggalGenerate DateTime      @default(now())
  data        Json              // Store report data as JSON
  userId      String
  createdAt   DateTime          @default(now())

  periode     PeriodeAkuntansi  @relation(fields: [periodeId], references: [id])
  user        User              @relation(fields: [userId], references: [id])

  @@index([tipe])
  @@index([periodeId])
  @@map("laporan_keuangan")
}

enum TipeLaporan {
  BALANCE_SHEET      // Neraca
  INCOME_STATEMENT   // Laporan Laba Rugi
  CASH_FLOW          // Arus Kas
  TRIAL_BALANCE      // Neraca Saldo
}

enum KategoriPengeluaran {
  GAJI_KARYAWAN     // Gaji dan Tunjangan Karyawan
  UTILITAS          // Listrik, Air, Telepon
  SEWA              // Sewa Tempat Usaha
  PERLENGKAPAN_KANTOR // ATK, Alat Tulis
  TRANSPORTASI      // Transportasi dan Perjalanan
  PERBAIKAN         // Perbaikan dan Pemeliharaan
  IKLAN_PROMOSI     // Iklan dan Promosi
  PAJAK             // Pajak dan Retribusi
  ASURANSI          // Asuransi
  LAINNYA           // Pengeluaran Lain
}

// Expense Tracking
model Pengeluaran {
  id                String   @id @default(cuid())
  tanggal           DateTime @default(now())
  kategori          KategoriPengeluaran
  deskripsi         String
  jumlah            Float
  penerima          String
  metodePembayaran  String   @default("tunai")
  catatan           String?
  userId            String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user              User     @relation(fields: [userId], references: [id])

  @@index([tanggal])
  @@index([kategori])
  @@index([userId])
  @@map("pengeluaran")
}

// Financial Audit Log for XBRL Compliance and Regulatory Requirements
model FinancialAuditLog {
  id            String   @id @default(cuid())
  tableName     String
  recordId      String
  action        String
  oldValues     Json?
  newValues     Json?
  changeReason  String?
  metadata      Json?
  changedBy     String
  changedAt     DateTime @default(now())

  @@index([tableName])
  @@index([recordId])
  @@index([changedBy])
  @@index([changedAt])
  @@map("financial_audit_log")
}
